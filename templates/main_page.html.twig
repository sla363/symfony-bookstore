{% extends 'base.html.twig' %}
{% block title %}Main page{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for book in books %}
                <div class="col-md-2 mb-4">
                    <div class="card h-100 shadow-sm mr-2">
                        <img src="https://picsum.photos/seed/{{ book.id }}/500/600" class="card-img-top"
                             alt="{{ book.title }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-sm text-bold">{{ book.title|length > 30 ? book.title|slice(0, 27) ~ '...' : book.title }}</h5>
                            <p class="card-text text-sm mt-auto">{{ book.author.fullName }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}