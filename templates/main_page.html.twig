{% extends 'base.html.twig' %}
{% block title %}Main page{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for book in books %}
                <div class="col-lg-2 col-md-4 col-sm-12 mb-4">
                    <div class="card h-100 shadow-sm mr-2">
                        <img src="https://picsum.photos/seed/{{ book.id }}/500/600" class="card-img-top"
                             alt="{{ book.title }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-sm text-bold text-center">{{ book.title|length > 30 ? book.title|slice(0, 27) ~ '...' : book.title }}</h5>
                            <div class="flex-grow-1 d-flex flex-column justify-content-end"> <!-- This div will grow to take available space -->
                                <p class="card-text text-sm mb-2 text-center">{{ book.author.fullName }}</p>
                                <p class="card-text text-sm text-center text-bold">{{ book.price~' Kƒç' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}