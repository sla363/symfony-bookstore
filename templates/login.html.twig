{% extends "base.html.twig" %}

{% block title %}Login page{% endblock %}

{% block body %}
    <h1>
        Login
    </h1>
    <div class="login-form bg-light mt-4 p-4">
        <form method="post" class="row g-3">
            <div class="col-12">
                <label for="inputEmail">Email</label><input type="email" name="email" id="inputEmail" class="form-control" value="{{ last_username }}" required autofocus>
            </div>
            <div class="col-12">
                <label for="inputPassword">Password</label><input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            {% if error is defined and error is not null %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {#    {{ form_start(form, {attr: {'novalidate': 'novalidate'}, 'action': path('app_login')}) }} #}
            {#    {{ form_row(form.email) }} #}
            {#    {{ form_row(form.password) }} #}
            <button type="submit">Submit</button>
        </form>
    </div>
    {#    {{ form_end(form) }} #}
{% endblock %}